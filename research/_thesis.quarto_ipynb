        "```{=mdx}\n",
        "import Figure from '/src/components/Figure'\n",
        "import AI from '../images/ai/ai-credibility.png'\n",
        "import Replika from '../images/ai/with-me.png'\n",
        "import ETF from '../images/ai/etfmatic.png'\n",
