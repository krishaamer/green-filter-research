        "```{=mdx}\n",
        "import Figure from '/src/components/Figure';\n",
        "import Humboldt from '/research/images/sustainability/humboldt.jpg';\n",
        "import Boundaries from \"/research/images/sustainability/planetary-boundaries-2023.png\";\n",
